<h2>ðŸ“„ Submissions for "<%= form.title %>"</h2>

<% if (submissions.length === 0) { %>
  <p>No submissions yet for this form.</p>
<% } else { %>
  <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>User Email</th>
        <th>Date Submitted</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% submissions.forEach((sub, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= sub.userId?.email || "Anonymous" %></td>
          <td><%= new Date(sub.createdAt).toLocaleString() %></td>
          <td>
            <a href="/admin/forms/<%= form._id %>/submissions/<%= sub._id %>" class="btn btn-secondary">
              View Submission
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } %>

